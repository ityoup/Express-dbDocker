<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<form style="display: grid; justify-content: center;" action="/insert" method="post">
  <label>Nombre:</label>
  <input type="text" id="name" name="name">
  
  <label>Edad:</label>
  <input type="number" id="edad" name="edad">
<br>

  <input type="submit" value="Agregar">
</form>

<div class="container">
        <% resultados.forEach((alumnos)=>{ %>
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://i.pinimg.com/736x/c5/ab/41/c5ab41e3f9766798af79b40d535f45e0.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= alumnos.nombre %></h5>
              <p class="card-text"><%= alumnos.edad %></p>
              <a href="#" class="btn btn-primary">Comprar</a>
            </div>
          </div>
          <% }) %>
        </div>
    
  <style>
    .container{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 20px;
    }

    .card{
      
      
    }
  </style>